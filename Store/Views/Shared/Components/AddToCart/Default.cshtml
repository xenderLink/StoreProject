@model InCartViewModel

<form><span class="card-text p-5">
@if (Model.inCart == false)
{
    <a type="submit"class="btn btn-success btn-m pull-right" style="float:right" asp-controller="Cart" asp-action="Add" asp-route-productId="@Model.Id"><i class="bi bi-cart4"></i>&nbsp;Добавить в корзину</a>
           
}
else
{
    <a class="btn btn-dark btn-m pull-right" asp-controller="Cart" asp-action="Index" style="float:right">&nbsp;В корзине</a>

}
 </span>
</form>